{
  "package": {
    "productName": "Tauri Vue Symfony App",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "frontend/dist",
    "devPath": "http://localhost:5173",
    "beforeBuildCommand": "npm --prefix frontend run build"
  },
  "tauri": {
    "bundle": {
      "active": false,
      "identifier": "com.example.coding_ui"
    },
    "windows": [
      {
        "label": "main",
        "title": "Tauri Vue Symfony App",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "center": true,
        "focus": true,
        "url": "/"
      }
    ],
    "allowlist": {},
    "security": {
      "csp": null
    }
  }
}
