{
    "name": "electron-vue-symfony-desktop",
    "version": "1.0.0",
    "description": "Electron desktop app for Vue 3 + Symfony stack",
    "main": "main.js",
    "homepage": "./",
    "scripts": {
        "start": "electron . --no-sandbox --disable-gpu",
        "dev": "electron . --dev --no-sandbox --disable-gpu",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux",
        "dist": "npm run build",
        "pack": "electron-builder --dir",
        "docker-start": "/app/start-electron.sh"
    },
    "keywords": [
        "electron",
        "vue",
        "symfony",
        "docker",
        "desktop"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "electron": "^28.0.0"
    },
    "devDependencies": {
        "electron-builder": "^24.9.0"
    },
    "build": {
        "appId": "com.example.electron-vue-symfony",
        "productName": "Electron Vue Symfony App",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "assets/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                }
            ],
            "category": "Development"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}